{
  "name": "dmcp",
  "version": "0.1.0",
  "description": "MCP service for AI-powered dungeon mastering in text RPGs",
  "license": "MIT",
  "author": "Shawn Rushefsky",
  "repository": {
    "type": "git",
    "url": "https://github.com/shawnrushefsky/dmcp.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "dmcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:client": "cd client && npm run dev",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:client": "cd client && npm run test",
    "test:all": "npm run test:run && npm run test:client -- run",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "express": "^5.0.1",
    "sharp": "^0.34.5",
    "uuid": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.51.0",
    "vitest": "^4.0.16"
  }
}
